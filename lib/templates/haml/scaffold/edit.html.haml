.page-header
  %span.pull-right
    - if params[:return_to]
      = link_to params[:return_to], :class => 'btn btn-default' do
        %span.glyphicon.glyphicon-list-alt
        =t('.back', :default => t("helpers.links.back"))
    - else
      = link_to <%= index_helper %>_path, :class => 'btn btn-default' do
        %span.glyphicon.glyphicon-list-alt
        =t('.back', :default => t("helpers.links.back"))
    = link_to @<%= singular_table_name %>, :class => 'btn btn-primary' do
      %span.glyphicon.glyphicon-info-sign
      =t('.show', :default => t("helpers.links.show"))
  %h1= t '.title', default: [t("helpers.links.edit", default: "Editing"), <%= class_name %>.model_name.human].join(' ')


= render 'form'
